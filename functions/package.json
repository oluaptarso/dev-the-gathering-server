{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "regen": "ts-node-dev --respawn --transpile-only --exit-child --watch --no-notify src/schema.ts --ignore-watch node_modules --ignore-watch lib",
    "serve": "firebase emulators:start",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "generate": "npx ts-node --transpile-only src/schema.ts",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "apollo-server-cloud-functions": "^3.10.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "express": "^4.18.1",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.18.0",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.18.0",
    "moment": "^2.29.4",
    "nexus": "^1.3.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/express": "types/express",
    "@types/node": "^18.7.22",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^0.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.5.4"
  },
  "private": true
}
